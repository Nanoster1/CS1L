<MudCard Outlined="true" Class="d-flex justify-space-around">
    <MudCardContent>
        <MudText>Ожидайте начала викторины</MudText>
        <MudText Typo="Typo.body2">Вы подключились к "Название"</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Disabled="true" Variant="Variant.Filled" Color="Color.Primary">
            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
            <MudText Class="ms-2">Processing</MudText>
        </MudButton>
    </MudCardActions>
</MudCard>

@code {

    private bool _isDarkMode;

    private MudTheme _theme = new();

    private MudThemeProvider _mudThemeProvider;


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }
    
}